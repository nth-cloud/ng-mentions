{
  "name": "ng-mentions",
  "version": "8.0.0",
  "description": "Angular components & directives for customizable mentions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nth-cloud/ng-mentions.git"
  },
  "author": "https://github.com/nth-cloud/ng-mentions/graphs/contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nth-cloud/ng-mentions/issues"
  },
  "homepage": "https://github.com/nth-cloud/ng-mentions#readme",
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.5.0",
    "yarn": ">=1.3.0 <2.0.0"
  },
  "keywords": [
    "angular",
    "mention",
    "mentions",
    "highlight",
    "components"
  ],
  "scripts": {
    "preinstall": "node misc/preinstall.js",
    "commitmsg": "node misc/validate-commit.js",
    "version": "npm run changelog && git add CHANGELOG.md",
    "changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 1",
    "build": "npm run lib:build && npm run demo:build",
    "static": "ts-node --project misc/tsconfig.json misc/copy-static-files.ts",
    "lint": "ng lint ng-mentions && npm run schematics:lint",
    "test": "npm run lint && npm run lib:test",
    "ci": "npm run test && npm run build",
    "tdd": "ng test ng-mentions --source-map false",
    "saucelabs": "ng test ng-mentions -c saucelabs",
    "saucelabs:ie": "ng test ng-mentions -c saucelabs-ie",
    "api-doc:tdd": "ts-node-dev --respawn --project misc/tsconfig.json node_modules/jasmine/bin/jasmine misc/api-doc.spec.ts",
    "api-doc:test": "ts-node --project misc/tsconfig.json node_modules/jasmine/bin/jasmine misc/api-doc.spec.ts",
    "lib:build": "ng build ng-mentions --configuration production && npm run schematics:build && npm run static",
    "lib:test": "ng test ng-mentions --code-coverage --source-map false --progress false --watch false",
    "schematics:lint": "tslint --project schematics/tsconfig.json",
    "schematics:build": "rimraf schematics/dist && tsc --project schematics/tsconfig.json",
    "schematics:tdd": "ts-node-dev --respawn --project misc/tsconfig.json node_modules/jasmine/bin/jasmine schematics/**/*.spec.ts",
    "schematics:test": "ts-node --project misc/tsconfig.json node_modules/jasmine/bin/jasmine schematics/**/*.spec.ts",
    "demo": "npm run demo:docs && npm run demo:stackblitzes && npm run demo:serve",
    "demo:serve": "ng serve demo --host 0.0.0.0",
    "demo:static": "gulp generate-demo-statics",
    "demo:docs": "ts-node --project misc/tsconfig.json misc/generate-docs.ts",
    "demo:lint": "ng lint demo",
    "demo:build": "npm run demo:lint && npm run demo:docs && npm run demo:stackblitzes && ng build demo --configuration production",
    "demo:deploy": "npm run demo:build && npm run demo:publish",
    "demo:publish": "gh-pages --dist demo/dist --branch gh-pages",
    "demo:stackblitzes": "ts-node --project misc/tsconfig.json misc/generate-stackblitzes.ts",
    "clean": "npm run clean:dist & npm run clean:test & npm run clean:demo & npm run clean:demo:deploy && npm run clean:demo:plunks && npm run clean:schematics",
    "clean:dist": "rimraf dist && ([[ ! -e dist.tgz ]] || rm dist.tgz)",
    "clean:test": "rimraf coverage",
    "clean:demo": "rimraf demo/dist",
    "clean:schematics": "rimraf schematics/dist",
    "clean:demo:deploy": "[[ ! -e .publish/ ]] || rm -fr .publish/",
    "clean:demo:plunks": "rimraf demo/src/public/app/components"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1302.5",
    "@angular-devkit/build-angular": "~13.2.5",
    "@angular-eslint/builder": "13.1.0",
    "@angular-eslint/eslint-plugin": "13.1.0",
    "@angular-eslint/eslint-plugin-template": "13.1.0",
    "@angular-eslint/schematics": "13.1.0",
    "@angular-eslint/template-parser": "13.1.0",
    "@angular/cli": "^13.2.5",
    "@angular/common": "^13.2.4",
    "@angular/compiler": "^13.2.4",
    "@angular/compiler-cli": "^13.2.4",
    "@angular/core": "^13.2.4",
    "@angular/forms": "^13.2.4",
    "@angular/localize": "^13.2.4",
    "@angular/platform-browser": "^13.2.4",
    "@angular/platform-browser-dynamic": "^13.2.4",
    "@angular/router": "^13.2.4",
    "@types/fs-extra": "^9.0.0",
    "@types/glob": "^7.1.1",
    "@types/he": "^1.1.0",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^14.0.26",
    "@types/prismjs": "^1.9.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "bootstrap": "^4.2.1",
    "clang-format": "^1.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "core-js": "3",
    "eslint": "^8.2.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jsdoc": "^36.0.8",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "fs-extra": "^9.0.1",
    "gh-pages": "^3.2.3",
    "glob": "^7.1.3",
    "he": "^1.1.0",
    "husky": "^4.2.5",
    "jasmine": "^3.3.1",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "^7.0",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-firefox-launcher": "^2.0",
    "karma-jasmine": "~4.0.0",
    "karma-sauce-launcher": "^4.1.5",
    "marked": "^4.0.12",
    "ng-packagr": "^13.2.1",
    "ngx-build-plus": "^13.0.1",
    "prismjs": "^1.25.0",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0",
    "tslib": "^2.3.1",
    "tslint": "~6.1.0",
    "tslint-jasmine-rules": "^1.3.2",
    "typescript": "4.5.5",
    "zone.js": "~0.11.4"
  }
}
